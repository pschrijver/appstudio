<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.paulschrijver.ghost" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".InitialStart"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameFound"
            android:label="@string/title_activity_game_found" >
        </activity>
        <activity
            android:name=".ActiveGame"
            android:label="@string/title_activity_active_game" >
        </activity>
        <activity
            android:name=".GameOver"
            android:label="@string/title_activity_game_over" >
        </activity>
        <activity
            android:name=".HighScores"
            android:label="@string/title_activity_high_scores" >
        </activity>
        <activity
            android:name=".ChangeLanguage"
            android:label="@string/title_activity_change_language" >
        </activity>
    </application>

</manifest>
