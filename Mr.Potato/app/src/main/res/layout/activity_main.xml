<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">




    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/body"
        android:id="@+id/potatobody"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arms"
        android:id="@+id/arms"
        android:visibility="invisible"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ears"
        android:id="@+id/ears"
        android:visibility="invisible"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/eyes"
        android:id="@+id/eyes"
        android:visibility="invisible"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hat"
        android:id="@+id/hat"
        android:visibility="invisible"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/eyebrows"
        android:id="@+id/eyebrows"
        android:visibility="invisible"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/glasses"
        android:id="@+id/glasses"
        android:visibility="invisible"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mouth"
        android:id="@+id/mouth"
        android:visibility="invisible"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mustache"
        android:id="@+id/mustache"
        android:visibility="invisible"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nose"
        android:id="@+id/nose"
        android:visibility="invisible"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shoes"
        android:id="@+id/shoes"
        android:visibility="invisible"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hat"
        android:id="@+id/checkHat"
        android:layout_alignBottom="@+id/potatobody"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="ChangeVisibility"
        android:tag="hat"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eyebrows"
        android:id="@+id/checkEyebrows"
        android:layout_below="@+id/potatobody"
        android:onClick="ChangeVisibility"
        android:tag="eyebrows"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nose"
        android:id="@+id/checkNose"
        android:layout_below="@+id/checkEyebrows"
        android:onClick="ChangeVisibility"
        android:tag="nose"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mustache"
        android:id="@+id/checkMustache"
        android:onClick="ChangeVisibility"
        android:tag="mustache"
        android:layout_below="@+id/checkGlasses"
        android:layout_alignLeft="@+id/checkGlasses"
        android:layout_alignStart="@+id/checkGlasses" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arms"
        android:id="@+id/checkArms"
        android:onClick="ChangeVisibility"
        android:tag="arms"
        android:layout_above="@+id/checkEyes"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eyes"
        android:id="@+id/checkEyes"
        android:onClick="ChangeVisibility"
        android:tag="eyes"
        android:layout_above="@+id/checkGlasses"
        android:layout_alignLeft="@+id/checkArms"
        android:layout_alignStart="@+id/checkArms" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Glasses"
        android:id="@+id/checkGlasses"
        android:onClick="ChangeVisibility"
        android:tag="glasses"
        android:layout_below="@+id/potatobody"
        android:layout_alignLeft="@+id/checkEyes"
        android:layout_alignStart="@+id/checkEyes" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mouth"
        android:id="@+id/checkMouth"
        android:onClick="ChangeVisibility"
        android:tag="mouth"
        android:layout_alignTop="@+id/checkArms"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ears"
        android:id="@+id/checkEars"
        android:onClick="ChangeVisibility"
        android:tag="ears"
        android:layout_below="@+id/checkMouth"
        android:layout_alignLeft="@+id/checkMouth"
        android:layout_alignStart="@+id/checkMouth" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shoes"
        android:id="@+id/checkShoes"
        android:onClick="ChangeVisibility"
        android:tag="shoes"
        android:layout_above="@+id/checkHat"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>
